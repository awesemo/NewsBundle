<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="rz_news_category_home" pattern="/category">
        <default key="_controller">RzNewsBundle:News:categoryHome</default>
    </route>

    <route id="rz_news_category_view" pattern="/category/{category}/{permalink}.{_format}">
        <default key="_controller">SonataNewsBundle:News:categoryView</default>
        <requirement key="_format">html</requirement>
        <requirement key="category">.+</requirement>
        <requirement key="permalink">[^/]+</requirement>
    </route>

    <route id="rz_news_category_pager" pattern="/category/{permalink}/page/{page}">
        <default key="_controller">SonataNewsBundle:News:categoryPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="permalink">.+</requirement>
    </route>

    <route id="rz_news_category" pattern="/category/{permalink}">
        <default key="_controller">RzNewsBundle:News:category</default>
        <requirement key="permalink">.+</requirement>
    </route>

    <route id="rz_news_add_comment" pattern="/add-comment/{id}">
        <default key="_controller">SonataNewsBundle:News:addComment</default>
    </route>

    <route id="rz_news_archive_monthly" pattern="/posts/{year}/{month}">
        <default key="_controller">SonataNewsBundle:News:archiveMonthly</default>
        <requirement key="year">\d+</requirement>
        <requirement key="month">\d+</requirement>
    </route>

    <route id="rz_news_archive_monthly_pager" pattern="/posts/{year}/{month}/page/{page}">
        <default key="_controller">SonataNewsBundle:News:archiveMonthlyPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="year">\d+</requirement>
        <requirement key="month">\d+</requirement>
    </route>

    <route id="rz_news_tag_view" pattern="/tag/{tag}/{permalink}.{_format}">
        <default key="_controller">SonataNewsBundle:News:tagView</default>
        <requirement key="_format">html</requirement>
        <requirement key="tag">[^/]+</requirement>
        <requirement key="permalink">[^/]+</requirement>
    </route>

    <route id="rz_news_tag" pattern="/tag/{tag}">
        <default key="_controller">SonataNewsBundle:News:tag</default>
    </route>

    <route id="rz_news_tag_pager" pattern="/tag/{tag}/page/{page}">
        <default key="_controller">SonataNewsBundle:News:tagPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="_format">html|rss</requirement>
    </route>

    <route id="rz_news_collection_view" pattern="/collection/{collection}/{permalink}.{_format}">
        <default key="_controller">SonataNewsBundle:News:collectionView</default>
        <requirement key="_format">html</requirement>
        <requirement key="collection">[^/]+</requirement>
        <requirement key="permalink">[^/]+</requirement>
    </route>

    <route id="rz_news_collection" pattern="/collection/{collection}">
        <default key="_controller">SonataNewsBundle:News:collection</default>
    </route>

    <route id="rz_news_collection_pager" pattern="/collection/{collection}/page/{page}">
        <default key="_controller">SonataNewsBundle:News:collectionPager</default>
        <requirement key="page">\d+</requirement>
    </route>

    <route id="rz_news_archive_yearly" pattern="/archive/{year}">
        <default key="_controller">SonataNewsBundle:News:archiveYearly</default>
        <requirement key="year">\d+</requirement>
    </route>

    <route id="rz_news_archive_yearly_pager" pattern="/archive/{year}/page/{page}">
        <default key="_controller">SonataNewsBundle:News:archiveYearlyPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="year">\d+</requirement>
    </route>

    <route id="rz_news_archive" pattern="/posts">
        <default key="_controller">SonataNewsBundle:News:archive</default>
    </route>

    <route id="rz_news_archive_pager" pattern="/posts/page/{page}">
        <default key="_controller">SonataNewsBundle:News:archivePager</default>
        <requirement key="page">\d+</requirement>
    </route>

    <route id="rz_news_comment_moderation" pattern="/comment/moderation/{commentId}/{hash}/{status}">
        <default key="_controller">SonataNewsBundle:News:commentModeration</default>
    </route>

    <route id="rz_news_view" pattern="/{permalink}.{_format}">
        <default key="_controller">SonataNewsBundle:News:view</default>
        <requirement key="_format">html</requirement>
        <requirement key="permalink">[^/]+</requirement>
    </route>

    <route id="rz_news_home" pattern="/">
        <default key="_controller">SonataNewsBundle:News:home</default>
    </route>
</routes>
