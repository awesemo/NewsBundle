<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="rz_news_archive_monthly" pattern="/posts/{year}/{month}">
        <default key="_controller">RzNewsBundle:NewsDefault:archiveMonthly</default>
        <requirement key="year">\d+</requirement>
        <requirement key="month">\d+</requirement>
    </route>

    <route id="rz_news_archive_monthly_pager" pattern="/posts/{year}/{month}/page/{page}">
        <default key="_controller">RzNewsBundle:NewsDefault:archiveMonthlyPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="year">\d+</requirement>
        <requirement key="month">\d+</requirement>
    </route>

    <route id="rz_news_archive_yearly" pattern="/archive/{year}">
        <default key="_controller">RzNewsBundle:NewsDefault:archiveYearly</default>
        <requirement key="year">\d+</requirement>
    </route>

    <route id="rz_news_archive_yearly_pager" pattern="/archive/{year}/page/{page}">
        <default key="_controller">RzNewsBundle:NewsDefault:archiveYearlyPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="year">\d+</requirement>
    </route>

    <route id="rz_news_archive" pattern="/posts">
        <default key="_controller">RzNewsBundle:NewsDefault:archive</default>
    </route>

    <route id="rz_news_archive_pager" pattern="/posts/page/{page}">
        <default key="_controller">RzNewsBundle:NewsDefault:archivePager</default>
        <requirement key="page">\d+</requirement>
    </route>

    <route id="rz_news_home" pattern="/">
        <default key="_controller">RzNewsBundle:NewsDefault:home</default>
    </route>

    <route id="rz_news_view" pattern="/{permalink}.{_format}">
        <default key="_controller">RzNewsBundle:NewsDefault:view</default>
        <requirement key="_format">html</requirement>
        <requirement key="permalink">[^/]+</requirement>
    </route>
</routes>
