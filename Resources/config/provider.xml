<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz_news.provider.default.class">Rz\NewsBundle\Provider\DefaultProvider</parameter>
        <parameter key="rz_news.provider.event.class">Rz\NewsBundle\Provider\EventProvider</parameter>
        <parameter key="rz_news.provider.ads.class">Rz\NewsBundle\Provider\AdsProvider</parameter>
        <parameter key="rz_news.pool.class">Rz\NewsBundle\Provider\Pool</parameter>
    </parameters>

    <services>
        <service id="rz_news.pool" class="%rz_news.pool.class%" shared="true">
            <argument />
        </service>

        <service id="rz_news.provider.default" class="%rz_news.provider.default.class%" shared="true">
            <tag name="rz_news.provider" />
            <argument>rz_news.provider.default</argument>
        </service>

        <service id="rz_news.provider.event" class="%rz_news.provider.event.class%" shared="true">
            <tag name="rz_news.provider" />
            <argument>rz_news.provider.event</argument>
        </service>

        <service id="rz_news.provider.ads" class="%rz_news.provider.ads.class%" shared="true">
            <tag name="rz_news.provider" />
            <argument>rz_news.provider.ads</argument>
        </service>
    </services>
</container>
