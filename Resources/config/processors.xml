           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz_news.field_processor.image.class">Rz\NewsBundle\FieldProcessor\MediaFieldProcessor</parameter>
    </parameters>

    <services>
        <service id="rz_news.field_processor.image" class="%rz_news.field_processor.image.class%">
            <tag name="rz_search.field_processor"/>
            <argument type="service" id="sonata.media.pool" />
        </service>
    </services>
</container>
