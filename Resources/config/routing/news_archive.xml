<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="rz_news_archive" pattern="/">
        <default key="_controller">RzNewsBundle:NewsArchive:archive</default>
    </route>

    <route id="rz_news_archive_pager" pattern="/page/{page}">
        <default key="_controller">RzNewsBundle:NewsArchive:archivePager</default>
        <requirement key="page">\d+</requirement>
    </route>

    <route id="rz_news_archive_monthly" pattern="/{year}/{month}">
        <default key="_controller">RzNewsBundle:NewsArchive:archiveMonthly</default>
        <requirement key="year">\d+</requirement>
        <requirement key="month">\d+</requirement>
    </route>

    <route id="rz_news_archive_monthly_pager" pattern="/{year}/{month}/page/{page}">
        <default key="_controller">RzNewsBundle:NewsArchive:archiveMonthlyPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="year">\d+</requirement>
        <requirement key="month">\d+</requirement>
    </route>

    <route id="rz_news_archive_yearly" pattern="/{year}">
        <default key="_controller">RzNewsBundle:NewsArchive:archiveYearly</default>
        <requirement key="year">\d+</requirement>
    </route>

    <route id="rz_news_archive_yearly_pager" pattern="/{year}/page/{page}">
        <default key="_controller">RzNewsBundle:NewsArchive:archiveYearlyPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="year">\d+</requirement>
    </route>

</routes>
