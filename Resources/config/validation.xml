    <class name="Sonata\NewsBundle\Model\Comment">
        <property name="name">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>

        <property name="email">
            <constraint name="Email">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>

        <property name="url">
            <constraint name="Url">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>

        <property name="message">
            <constraint name="NotNull">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>

        <property name="post">
            <constraint name="NotNull">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
