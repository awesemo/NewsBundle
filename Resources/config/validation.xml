<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">


    <class name="Rz\NewsBundle\Entity\Post">

        <property name="title">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>

        <property name="abstract">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>

        <property name="author">
            <constraint name="Valid"/>
        </property>

        <property name="rawContent">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>

        <property name="tags">
            <constraint name="Valid"/>
        </property>

        <property name="contentFormatter">
            <constraint name="Sonata\FormatterBundle\Validator\Constraints\Formatter" />
        </property>

        <property name="postHasCategory">
            <constraint name="Valid" />
        </property>

        <constraint name="Rz\NewsBundle\Validator\Constraints\PrePersistRelation">
            <option name="groups">
                <value>Admin</value>
            </option>
        </constraint>
    </class>

    <class name="Rz\NewsBundle\Entity\BasePostHasCategory">

        <property name="category">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Admin</value>
                </option>
            </constraint>
        </property>

        <!--<property name="portfolio">-->
            <!--<constraint name="NotBlank" />-->
        <!--</property>-->

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>post</value>
                <value>category</value>
            </option>
            <option name="message">Category already exist.</option>
            <option name="groups">
                <value>Admin</value>
            </option>
        </constraint>
    </class>

