<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="rz_news.block.featured_posts" class="Rz\NewsBundle\Block\FeaturedPostsBlockService">
            <tag name="sonata.block"/>
            <argument>rz_news.block.featured_posts</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="service_container" />
            <argument type="service" id="sonata.news.manager.post" />
        </service>

        <service id="rz_news.block.tags" class="Rz\NewsBundle\Block\TagsBlockService">
            <tag name="sonata.block"/>
            <argument>rz_news.block.tags</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="service_container" />
            <argument type="service" id="sonata.news.manager.post" />
        </service>

        <service id="rz_news.block.collection" class="Rz\NewsBundle\Block\CollectionBlockService">
            <tag name="sonata.block"/>
            <argument>rz_news.block.collection</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="service_container" />
            <argument type="service" id="sonata.news.manager.post" />
        </service>
    </services>

</container>
