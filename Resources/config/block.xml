<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz_news.block.post_by_collection.class">Rz\NewsBundle\Block\PostByCollectionBlockService</parameter>
        <parameter key="rz_news.block.featured_posts.class">Rz\NewsBundle\Block\FeaturedPostsBlockService</parameter>
        <parameter key="rz_news.block.tags.class">Rz\NewsBundle\Block\TagsBlockService</parameter>
    </parameters>

    <services>
        <service id="rz_news.block.featured_posts" class="%rz_news.block.featured_posts.class%" scope="prototype">
            <tag name="sonata.block"/>
            <argument>rz_news.block.featured_posts</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="service_container" />
            <argument type="service" id="sonata.news.manager.post" />
        </service>

        <service id="rz_news.block.tags" class="%rz_news.block.tags.class%"  scope="prototype">
            <tag name="sonata.block"/>
            <argument>rz_news.block.tags</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="service_container" />
            <argument type="service" id="sonata.news.manager.post" />
        </service>

        <service id="rz_news.block.post_by_collection" class="%rz_news.block.post_by_collection.class%" scope="prototype">
            <tag name="sonata.block"/>
            <argument>rz_news.block.post_by_collection</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="sonata.classification.manager.collection" />
            <argument type="service" id="sonata.classification.admin.collection" />
            <argument type="service" id="sonata.news.manager.post" />
            <argument>%rz_news.block.post_by_collection.templates%</argument>
        </service>

    </services>

</container>
