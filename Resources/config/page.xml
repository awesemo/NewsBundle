<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz_news.page.service.post.class">Rz\NewsBundle\Page\Service\PostPageService</parameter>
        <parameter key="rz_news.page.service.category_list.class">Rz\NewsBundle\Page\Service\CategoryListPageService</parameter>
    </parameters>

    <services>
        <service id="rz_news.page.service.post" class="%rz_news.page.service.post.class%">
            <tag name="sonata.page"/>
            <argument>Post</argument>
            <argument type="service" id="sonata.page.template_manager" />
            <argument type="service" id="sonata.seo.page" />
        </service>
        <service id="rz_news.page.service.category_list" class="%rz_news.page.service.category_list.class%">
            <tag name="sonata.page"/>
            <argument>Category List</argument>
            <argument type="service" id="sonata.page.template_manager" />
            <argument type="service" id="sonata.seo.page" />
            <argument type="service" id="router" />
        </service>
    </services>
</container>
