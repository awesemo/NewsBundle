<h3>{{'title_leave_comment'|trans({}, 'SonataNewsBundle') }}</h3>
<div class="contact_form pad15">
<form class="contact-form" action="{{ url('sonata_news_add_comment', {'id': post_id}) }}" method="POST">
    <div class="control-group">
        {{ form_label(form.name, label|default(null), { 'attr': { 'class': 'form_info'}}) }}
        <div class="controls">
            {{ form_widget(form.name, {'attr': {'class':'span7'} }) }}
        </div>
    </div>
    <div class="control-group">
        {{ form_label(form.email, label|default(null), { 'attr': { 'class': 'form_info'}}) }}
        <div class="controls">
            {{ form_widget(form.email, {'attr': {'class':'span7'} }) }}
        </div>
    </div>
    <div class="control-group">
        {{ form_label(form.url, label|default(null), { 'attr': { 'class': 'form_info'}}) }}
        <div class="controls">
            {{ form_widget(form.url, {'attr': {'class':'span7'} }) }}
        </div>
    </div>
    <div class="control-group">
        {{ form_label(form.message, label|default(null), { 'attr': { 'class': 'form_info'}}) }}
        <div class="controls">
            {{ form_widget(form.message, {'attr': {'class':'span7'} }) }}
        </div>
    </div>
    <div class="clear-fix"></div>
    <div class="control-group">
        <div class="controls">
            {{ form_rest(form) }}
            <input type="submit" value="{{'btn_add_comment'|trans({}, 'SonataNewsBundle') }}" class="btn btn-rzcms-theme"/>
        </div>
    </div>
</form>
</div>
