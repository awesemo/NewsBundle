<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz.news.page.service.default.class">Rz\NewsBundle\Page\Service\DefaultNewsPageService</parameter>
        <parameter key="rz.news.page.service.category.class">Rz\NewsBundle\Page\Service\CategoryNewsPageService</parameter>
        <parameter key="rz.news.page.service.post_canonical.class">Rz\NewsBundle\Page\Service\PostCanonicalNewsPageService</parameter>
        <parameter key="rz.news.page.service.category_canonical.class">Rz\NewsBundle\Page\Service\CategoryCanonicalNewsPageService</parameter>
    </parameters>

    <services>
        <service id="rz.news.page.service.default" class="%rz.news.page.service.default.class%">
            <tag name="sonata.page"/>
            <argument>News Page</argument>
            <argument type="service" id="sonata.page.template_manager" />
            <argument type="service" id="sonata.seo.page" />
            <argument type="service" id="sonata.page.router" />
        </service>

        <service id="rz.news.page.service.category" class="%rz.news.page.service.category.class%">
            <tag name="sonata.page"/>
            <argument>Category Page</argument>
            <argument type="service" id="sonata.page.template_manager" />
            <argument type="service" id="sonata.seo.page" />
            <argument type="service" id="sonata.page.router" />
        </service>

        <service id="rz.news.page.service.post_canonical" class="%rz.news.page.service.post_canonical.class%">
            <tag name="sonata.page"/>
            <argument>News Page Canonical</argument>
            <argument type="service" id="sonata.page.template_manager" />
            <argument type="service" id="sonata.seo.page" />
        </service>

        <service id="rz.news.page.service.category_canonical" class="%rz.news.page.service.category_canonical.class%">
            <tag name="sonata.page"/>
            <argument>Category Page Canonical</argument>
            <argument type="service" id="sonata.page.template_manager" />
            <argument type="service" id="sonata.seo.page" />
        </service>
    </services>
</container>
