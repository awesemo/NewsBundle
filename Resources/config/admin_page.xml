<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="rz.news.admin.post_has_page.class">Rz\NewsBundle\Admin\PostHasPageAdmin</parameter>
    </parameters>

    <services>

        <service id="rz.news.admin.post_has_page" class="%rz.news.admin.post_has_page.class%">
            <tag name="sonata.admin" manager_type="orm" group="sonata_blog" label="label_post_has_page"  show_in_dashboard="false" label_catalogue="%sonata.news.admin.post_has_page.translation_domain%" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument />
            <argument>%rz.news.admin.post_has_page.entity%</argument>
            <argument>%rz.news.admin.post_has_page.controller%</argument>

            <call method="setTranslationDomain">
                <argument>%rz.news.admin.post_has_page.translation_domain%</argument>
            </call>
        </service>

    </services>

</container>
