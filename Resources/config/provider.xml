<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz.news.pool.class">Rz\NewsBundle\Provider\Pool</parameter>
        <parameter key="rz.news.provider.default.class">Rz\NewsBundle\Provider\DefaultProvider</parameter>
    </parameters>

    <services>
        <service id="rz.news.pool" class="%rz.news.pool.class%" shared="true">
            <argument />
        </service>
        <service id="rz.news.provider.default" class="%rz.news.provider.default.class%" shared="true">
            <tag name="rz.news.provider" />
            <argument>rz.news.provider.default</argument>
        </service>
    </services>

</container>
