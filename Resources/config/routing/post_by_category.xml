<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="rz_news_post_by_classification_category_load_more" pattern="/_post_by_category/load-more/{categoryId}-{blockId}/{page}/{filter}">
        <default key="_controller">RzNewsBundle:PostByClassification:postsByCategoryAjaxPager</default>
        <default key="_classification">category_load_more</default>
        <default key="filter">latest|trending</default>
        <requirement key="page">\d+</requirement>
    </route>

    <route id="rz_news_post_by_classification_category_filter" pattern="/_post_by_category/filter/{categoryId}-{blockId}/{filter}">
        <default key="_controller">RzNewsBundle:PostByClassification:postsByCategoryAjaxFilter</default>
        <default key="_classification">category_load_more</default>
        <requirement key="filter">latest|trending</requirement>
    </route>

</routes>
