<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="rz_news_category_home" pattern="/category">
        <default key="_controller">RzNewsBundle:NewsCategory:categoryHome</default>
    </route>

    <route id="rz_news_category_view" pattern="/category/{category}/{permalink}.{_format}">
        <default key="_controller">RzNewsBundle:NewsCategory:categoryView</default>
        <requirement key="_format">html</requirement>
        <requirement key="category">.+</requirement>
        <requirement key="permalink">[^/]+</requirement>
    </route>

    <route id="rz_news_news_category_load_more" pattern="/load-more/category/{permalink}/{page}">
        <default key="_controller">RzNewsBundle:NewsCategory:categoryAjaxPager</default>
        <requirement key="permalink">.+</requirement>
        <requirement key="page">\d+</requirement>
    </route>

    <route id="rz_news_category_pager" pattern="/category/{permalink}/page/{page}">
        <default key="_controller">RzNewsBundle:NewsCategory:categoryPager</default>
        <requirement key="page">\d+</requirement>
        <requirement key="permalink">.+</requirement>
    </route>

    <route id="rz_news_category" pattern="/category/{permalink}">
        <default key="_controller">RzNewsBundle:NewsCategory:category</default>
        <requirement key="permalink">.+</requirement>
    </route>
</routes>
