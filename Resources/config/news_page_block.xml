<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz.news.news_page.default.block.class">Rz\NewsBundle\Block\NewsPageDefaultPostBlockService</parameter>
    </parameters>

    <services>
        <service id="rz.news.news_page.default.block.post" class="%rz.news.news_page.default.block.class%">
            <tag name="sonata.block" />
            <argument>rz.news.news_page.default.block</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="sonata.news.manager.post" />
            <argument type="service" id="sonata.news.admin.post" />
            <argument type="service" id="sonata.page.site.selector" />
            <argument type="service" id="sonata.page.cms_manager_selector" />
        </service>
    </services>
</container>
