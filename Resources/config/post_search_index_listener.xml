<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz_news.search_index.listener.post.class">Rz\NewsBundle\Listener\PostSearchIndexListener</parameter>
    </parameters>

    <services>
        <service id="rz_news.search_index.listener.post_update" class="%rz_news.search_index.listener.post.class%">
            <tag name="doctrine.event_listener" event="postUpdate" />
            <tag name="doctrine.event_listener" event="postPersist" />
            <argument>sonata.news.post</argument>
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
